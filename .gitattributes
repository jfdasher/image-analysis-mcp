# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyx text eol=lf
*.pyi text eol=lf

# Shell scripts
*.sh text eol=lf

# Config files
*.toml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.cfg text eol=lf
*.ini text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Docker
Dockerfile text eol=lf
.dockerignore text eol=lf
docker-compose.yml text eol=lf

# Git
.gitignore text eol=lf
.gitattributes text eol=lf

# Binary files
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.tiff binary
*.tif binary
*.ico binary
*.svg binary
*.webp binary

# RAW image formats
*.cr2 binary
*.cr3 binary
*.nef binary
*.arw binary
*.dng binary
*.raf binary
*.orf binary

# Archive files
*.zip binary
*.tar binary
*.gz binary
*.tgz binary
*.bz2 binary

# Python compiled files
*.pyc binary
*.pyo binary
*.pyd binary
*.so binary
*.dll binary
